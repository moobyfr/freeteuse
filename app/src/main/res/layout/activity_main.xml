<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RevolutionBgGrey"
    tools:context="bzh.leroux.yannick.freeteuse.MainActivity">

    <LinearLayout
        android:id="@+id/key_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Ktv"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xtv"
                android:tag="onMultiClick:Kfree+3000+Kright+Kright+Kright+Kright+Kright+Kright+Kleft+Kleft+Kleft+Kleft+Kok"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"/>

            <TextView
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size" />

            <ImageButton
                android:id="@+id/Kpower"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xpower"
                android:tag="onClick:0x01:0x30"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/K1"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb1"
                android:tag="onClick:0x02:0x59"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K2"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb2"
                android:tag="onClick:0x02:0x5a"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K3"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb3"
                android:tag="onClick:0x02:0x5b"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K4"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb4"
                android:tag="onClick:0x02:0x5c"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K5"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb5"
                android:tag="onClick:0x02:0x5d"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/K6"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb6"
                android:tag="onClick:0x02:0x5e"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K7"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb7"
                android:tag="onClick:0x02:0x5f"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K8"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb8"
                android:tag="onClick:0x02:0x60"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K9"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb9"
                android:tag="onClick:0x02:0x61"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/K0"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xb0"
                android:tag="onClick:0x02:0x62"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/key_small_text_size"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Kvol_plus"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xplus"
                android:tag="onTouch:0x01:0xe9"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kback"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xback"
                android:tag="onClick:0x01:0x204"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kup"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xup"
                android:tag="onTouch:0x02:0x52"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Ksearch"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xsearch"
                android:tag="onClick:0x01:0x221"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kprog_plus"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xplus"
                android:tag="onTouch:0x01:0x9c"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Kmute"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xmute"
                android:tag="onClick:0x01:0xe2"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kleft"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xleft"
                android:tag="onTouch:0x02:0x50"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kok"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xok"
                android:tag="onClick:0x02:0x28"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kright"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xright"
                android:tag="onTouch:0x02:0x4f"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Krecord"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xrecord"
                android:tag="onClick:0x01:0xb2"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Kvol_minus"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xminus"
                android:tag="onTouch:0x01:0xea"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kmenu"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xmenu"
                android:tag="onClick:0x01:0x40"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kdown"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xdown"
                android:tag="onTouch:0x02:0x51"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kinfo"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xinfo"
                android:tag="onClick:0x01:0x209"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/Kprog_minus"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xminus"
                android:tag="onTouch:0x01:0x9d"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Kprevious_box"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:onClick="onPreviousFreebox"
                android:scaleType="fitXY"
                android:src="@drawable/xpreviousred"
                android:visibility="invisible"
                tools:ignore="ContentDescription"/>

            <RelativeLayout
                android:layout_width="@dimen/three_key_size"
                android:layout_height="@dimen/key_size">

                <ImageButton
                    android:id="@+id/Kfree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/RevolutionBgGrey"
                    android:scaleType="fitXY"
                    android:src="@drawable/xfreered"
                    android:tag="onClick:0x01:0x18f"
                    android:visibility="visible"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/wireless"
                    tools:ignore="ContentDescription"/>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/Knext_box"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:onClick="onNextFreebox"
                android:scaleType="fitXY"
                android:src="@drawable/xnextblue"
                android:visibility="invisible"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"/>

            <ImageButton
                android:id="@+id/Krewind"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xrewind"
                android:tag="onClick:0x01:0xb4"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/Kplay_pause"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xplay_pause"
                android:tag="onClick:0x01:0xcd"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/Kforward"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xforward"
                android:tag="onClick:0x01:0xb3"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Kdeezer"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xdeezer"
                android:tag="onMultiClick:Kfree+3000+Kright+Kright+Kright+Kright+Kright+Kright+Kleft+Kleft+Kup+Kup+Kup+Kok"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/Kradio"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xradio"
                android:tag="onMultiClick:Kfree+3000+Kright+Kright+Kright+Kright+Kright+Kright+Kleft+Kleft+Kup+Kup+Kup+Kup+Kok"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/Kmusic"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xmusic"
                android:tag="onMultiClick:Kmenu+Kdown+Kdown+Kdown+Kdown+Kdown+Kdown+Kdown+Kdown+Kdown+Kdown+Kok"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/Kpip"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xpip"
                android:tag="onMultiClick:Kdown+Kinfo+2500+Kright+Kright+Kleft+Kok+Kback+Kback"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/Kkeyboard"
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                android:background="@color/RevolutionBgGrey"
                android:scaleType="fitXY"
                android:src="@drawable/xkeyboard"
                android:onClick="onKeyboardClick"
                tools:ignore="ContentDescription"/>
          </LinearLayout>

    </LinearLayout>

</FrameLayout>
